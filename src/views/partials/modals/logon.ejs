<div id="logon-modal" class="modal">
  <div class="model-container" id="logon-modal-container">
    <button class="close-button" id="logon-close-button">
      &times;
    </button>
    <div id="logon-modal-content">
      <div id="about-container">
        <div id="logon-modal-logo-container">
          <img class="logo">
        </div>
      </div>
      <div class="modal-separator"></div>
      <div id="logon-related-container">
        <p id="logon-label">LOGON</p>
        <div id="login-form">
          <div id="login">
            <div class="text-input-container">
              <i class="far fa-envelope"></i>
              <input id="email" type="text" autocomplete="off" placeholder="Email" />
            </div>
            <div class="text-input-container">
              <i class="fas fa-lock"></i>
              <input id="password" type="password" autocomplete="off" placeholder="Senha" />
            </div>
            <input id="login-input" class="submit-button" type="submit" value="LOGIN" />
          </div>
        </div>
        <div id="signup-form">

        </div>
      </div>
    </div>
  </div>
</div>